<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="al.demo.alarmmanagerdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="al.demo.alarmmanagerdemo.ShakingGame"
            android:label="@string/app_name" />

        <receiver android:name=".PowerConnectedBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.ACTION_POWER_CONNECTED"/>
            </intent-filter>
        </receiver>
        <receiver android:name=".NotificationPublisher" >
            <intent-filter>
                <action android:name="al.demo.alarmmanagerdemo.NOTIFY_ACTION"/>
            </intent-filter>
        </receiver>
        <service android:name=".AlarmPlayer"
            android:enabled="true"></service>

    </application>

</manifest>