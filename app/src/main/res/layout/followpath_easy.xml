<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Background"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/debugText"
            style="@style/WhiteText"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="Follow the path"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/StartText"
            style="@style/WhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Start" />

        <TextView
            android:id="@+id/startText"
            style="@style/WhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Finish" />

        <View
            android:id="@+id/section0"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_alignTop="@+id/StartingPoint"
            android:layout_marginRight="-50dp"
            android:layout_marginTop="12.5dp"
            android:layout_toStartOf="@+id/StartingPoint"
            android:background="@color/white" />

        <View
            android:id="@+id/section1"
            android:layout_width="75dp"
            android:layout_height="265dp"
            android:layout_alignBottom="@+id/section0"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/section0"
            android:background="@color/white" />

        <View
            android:id="@+id/section2"
            android:layout_width="350dp"
            android:layout_height="75dp"
            android:layout_alignStart="@+id/section1"
            android:layout_alignTop="@+id/section1"
            android:background="@color/white" />

        <View
            android:id="@+id/section3"
            android:layout_width="75dp"
            android:layout_height="268dp"
            android:layout_alignBottom="@+id/section2"
            android:layout_alignEnd="@+id/section2"
            android:background="@color/white" />

        <View
            android:id="@+id/section4"
            android:layout_width="175dp"
            android:layout_height="75dp"
            android:layout_alignStart="@+id/FinishingPoint"
            android:layout_alignTop="@+id/FinishingPoint"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="12.5dp"
            android:background="@color/white" />

        <View
            android:id="@+id/StartingPoint"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/StartText"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle"
            android:text="View" />

        <View
            android:id="@+id/FinishingPoint"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="37.5dp"
            android:background="@drawable/circle"
            android:elevation="0dp"
            android:text="View" />

    </RelativeLayout>

</LinearLayout>