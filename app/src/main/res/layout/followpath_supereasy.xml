<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/Background"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">


        <TextView
            android:id="@+id/debugText"
            style="@style/WhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Follow the path"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/StartText"
            style="@style/WhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/section2"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="14dp"
            android:text="Start" />

        <TextView
            android:id="@+id/startText"
            style="@style/WhiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignEnd="@+id/section0"
            android:layout_alignTop="@+id/debugText"
            android:layout_marginEnd="14dp"
            android:text="Finish" />

        <View
            android:id="@+id/section0"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_alignEnd="@+id/FinishingPoint"
            android:layout_alignTop="@+id/FinishingPoint"
            android:layout_marginRight="16dp"
            android:layout_marginTop="68dp"
            android:background="@color/white" />

        <View
            android:id="@+id/section1"
            android:layout_width="324dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/section2"
            android:layout_alignTop="@+id/section2"
            android:background="@color/white" />

        <View
            android:id="@+id/section2"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_alignBottom="@+id/StartingPoint"
            android:layout_alignStart="@+id/StartingPoint"
            android:layout_marginBottom="68dp"
            android:layout_marginLeft="13dp"
            android:background="@color/white" />

        <View
            android:id="@+id/StartingPoint"
            android:layout_width="125dp"
            android:layout_height="126dp"
            android:layout_above="@+id/StartText"
            android:layout_alignEnd="@+id/debugText"
            android:layout_marginBottom="12dp"
            android:background="@drawable/circle"
            android:text="View" />

        <View
            android:id="@+id/FinishingPoint"
            android:layout_width="126dp"
            android:layout_height="125dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/debugText"
            android:layout_marginRight="15dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/circle"
            android:elevation="0dp"
            android:text="View" />

    </RelativeLayout>

</LinearLayout>